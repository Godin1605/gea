@import 'lib/normalize'
@import 'nib'
@import 'functions'

html
body
  width 100%
  height 100%
  max-width 100%
  max-height 100%

body
  background-color#D6FFC2

#api
  visibility hidden
  height 0

#right
  position absolute
  top 0
  bottom 0
  right 0
  width 300px
  height 100%

#player-art
  width 300px
  height 250px
  background #fff

#progress-bar
  width 300px
  height 10px
  background #bbb

#controls
  height 45px
  position relative
  user-select(none)

#previous
#next
#play-pause
  display inline-block
  background #eee
  width 100px
  height 45px
  line-height 30px
  text-align center
  position absolute
  cursor pointer
  &:hover
    background #fff

#next
  left 200px

#play-pause
  left 100px

#social 
  height 65px
  position relative
  user-select(none)

#like
#dislike
  display inline-block
  background #eee
  width 150px
  height 65px
  line-height 30px
  text-align center
  position absolute
  cursor pointer
  &:hover
    background #fff

#dislike
  left 150px

#fill
  height 100%
  background #80C7E3

#map
  position fixed
  top 0
  left 0
  right 300px
  bottom 0
  overflow hidden
  background #ccc

h2
  text-align center
  font-family Tahoma
  color #8B1C62
  
#track-header
#album-header
#artist-header
   font-family: Tahoma
   color: #99CC66;
   text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
