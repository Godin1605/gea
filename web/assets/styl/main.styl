@import 'lib/normalize'
@import 'functions'

html
body
  width 100%
  height 100%
  max-width 100%
  max-height 100%

body
  background-color#D6FFC2


#right
  position absolute
  top 0
  bottom 0
  right 0
  width 300px
  height 100%


#player-art
  width 300px
  height 300px
  background #fff


#progress-bar
  width 300px
  height 3px
  background #bbb


#controls
  height 30px
  position relative
  user-select(none)


#previous
#next
#play-pause
  display inline-block
  background #eee
  width 100px
  height 30px
  line-height 30px
  text-align center
  position absolute
  cursor pointer


#next
  left 200px


#play-pause
  left 100px


#social
  height 30px
  position relative
  user-select(none)


#like
#dislike
  display inline-block
  background #eee
  width 150px
  height 30px
  line-height 30px
  text-align center
  position absolute
  cursor pointer


#dislike
  left 150px


#previoushover
#nexthover
#play-pausehover
#likehover
#dislikehover
  background #fff


@keyframes fill
  from
    width 0%
  to
    width 100%


#fill
  height 100%
  background #80C7E3
  animation fill 5s linear infinite


#map
  position fixed
  top 0
  left 0
  right 300px
  bottom 0
  overflow hidden
  background #ccc


h2
  text-align center
  font-family Tahoma
  color #8B1C62
